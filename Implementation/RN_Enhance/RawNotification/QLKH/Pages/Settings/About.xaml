<UserControl x:Class="QLKH.Pages.Settings.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="ABOUT" Style="{StaticResource Heading2}" />
                <TextBlock Text="Phần mềm hỗ trợ quản lí khách hàng." Margin="0,0,0,8" TextWrapping="Wrap" />
                <TextBlock Text="Người phát triển: Lê Khả Sỹ" Margin="0,0,0,8" TextWrapping="Wrap" />
                <TextBlock Text="Lớp 15TH0001 - Đại học Bình Dương" Margin="0,0,0,8" />
                <StackPanel Orientation="Horizontal">
                    <Label Content="Facebook: " Margin="0,0,0,8" />
                    <Label Margin="0,0,0,8"  MouseLeftButtonDown="Label_MouseLeftButtonDown" Cursor="Hand" Content="https://www.facebook.com/le.khasy" Foreground="#FF4CB0DE"></Label>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
