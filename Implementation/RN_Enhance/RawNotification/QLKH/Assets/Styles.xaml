<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                    xmlns:local="clr-namespace:QLKH.Assets">
    <Style TargetType="StackPanel" x:Key="HorizontalStackpanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>
    <Style TargetType="Label" x:Key="FormLabel">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Width" Value="132"/>
    </Style>
    <Style x:Key="FormContentWidth" TargetType="Control">
        <Setter Property="Width" Value="169"/>
    </Style>

    <Style x:Key="FormContentMargin" TargetType="Control">
        <Setter Property="Margin" Value="0,4,0,0"/>
    </Style>

    <Style TargetType="mui:ModernButton" x:Key="ModernButtonGereralStyle">
        <Setter Property="Height" Value="38"/>
        <Setter Property="Width" Value="38"/>
        <Setter Property="EllipseDiameter" Value="30"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Margin" Value="20,0,0,0"/>
    </Style>
</ResourceDictionary>